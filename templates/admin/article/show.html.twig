{% extends 'base.admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>

            <tr>
                <th>Denomination</th>
                <td>{{ article.Denomination }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.Description }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ article.Genres.genre }}</td>
            </tr>
            <tr>
                <th>Forme</th>
                <td>{{ article.Forme.formes }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ article.Couleurs.couleur }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ article.Marques.marque }}</td>
            </tr>
            <tr>
                <th>Matière</th>
                <td>{{ article.Matieres.matiere }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ article.Prix }} €</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ article.Disponibilite }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td><img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{article.Denomination}}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
