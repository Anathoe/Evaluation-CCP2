{% extends 'base.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
            
                <th>SousTitre</th>
            
                <th>Texte</th>
            
                <th>Image</th>
            
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.Titre }}</td>
                <td>{{ blog.SousTitre }}</td>
                <td>{{ blog.Texte }}</td>
                <td>{{ blog.Image }}</td>
                <td>
                    <a href="{{ path('blog_show', {'id': blog.id}) }}">show</a>
                    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% if blogs == false %}
    <a href="{{ path('blog_new') }}">Create new</a>
{% endif %}

{% endblock %}

